<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.project.dao.useradmin.UserAdminDao">
    <resultMap id="userAdminEO" type="UserAdminEO" extends="com.company.project.dao.userbase.UserBaseDao.userBaseEO">
        <result property="uaId" column="UA_ID"/>
    </resultMap>
    <sql id="Base_Column_List">
        <include refid="com.company.project.dao.userbase.UserBaseDao.Base_Column_List"/>,
        UA.UA_ID
    </sql>

    <insert id="insert" parameterType="userAdminEO">
        INSERT INTO USER_ADMIN (UA_ID) VALUES (#{uaId})
    </insert>

    <select id="get" parameterType="java.lang.Long" resultMap="userAdminEO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM USER_ADMIN UA
        JOIN USER_BASE UB ON UB.UB_ID = UA.UA_ID
        WHERE UB.UB_ID = #{ubId}
    </select>
</mapper>
